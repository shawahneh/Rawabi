<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue2</item>
        <item name="colorPrimaryDark">@color/blue2</item>
        <item name="colorAccent">@color/blue_sky</item>
        <item name="android:textColorTertiary">#fff</item>
    </style>
    <style name="AppTheme.white" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#d9d9d9</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorTertiary">#8b8b8b</item>
    </style>

    <style name="AppTheme.Carpool" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="colorPrimary">#64d25e</item>-->
        <!--<item name="colorPrimaryDark">#64d25e</item>-->

        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorTertiary">@color/white</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.No" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorTertiary">#fff</item>
    </style>
    <style name="AppTheme.Carpool.No" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorTertiary">#fff</item>
    </style>
    <style name="AppTheme.Basic" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/city</item>
        <item name="colorPrimaryDark">@color/city</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorTertiary">#fff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
</resources>
